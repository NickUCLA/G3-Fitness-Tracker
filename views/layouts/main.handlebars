      </h1>
      <!--Only display the logout button if the user is logged in -->
      {{#if logged_in}}
        <nav class="btn-group">
          <a class="btn btn-primary" href="#submit-workout">Generate Workout</a>
          <a class="btn btn-primary" href="#generatedWorkout">View Workout</a>
          <a class="btn btn-primary" href="#generatedMeal">View Meal</a>
          <button class="btn btn-primary" id="logout">logout</button>
        </nav>
      {{/if}}
    </header>
    <main class="container container-fluid mt-5">
      {{{body}}}
    </main>
    <footer>

    </footer>

    <!-- Only include the logout script if the user is logged in -->
    {{#if logged_in}}
